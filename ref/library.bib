journal = {Development Genes and Evolution},
keywords = {Adult rudiment,Embryogenesis,Ion flux,Left-right asymmetry,Sea urchin},
month = {may},
number = {5},
pages = {265--276},
title = {{Ion flow regulates left-right asymmetry in sea urchin development}},
volume = {216},
year = {2006}
}
