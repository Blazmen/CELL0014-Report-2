file = {:C$\backslash$:/Users/jblah/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Gonze, Abou-Jaoud{\'{e}} - 2013 - The Goodwin Model Behind the Hill Function(2).pdf:pdf},
issn = {19326203},
journal = {PLoS ONE},
keywords = {Circadian oscillators,Circadian rhythms,Curve fitting,DNA transcription,Genetic oscillators,Numerical integration,Phosphorylation,Transcription factors},
number = {8},
pages = {69573},
pmid = {23936338},
publisher = {Public Library of Science},
title = {{The Goodwin Model: Behind the Hill Function}},
volume = {8},
year = {2013}
}
